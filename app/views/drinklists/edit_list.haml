= link_to 'Ny bärs', new_drinklist_path
= form_tag save_list_path do
  %table
    %thead
      %tr
        %th Aktiv
        %th Namn
        %th Märke
        %th Kategory
        %th Underkategori
        %th Typ
        %th Inköpspris
        %th Pris
        %th Ändra
    %tbody
      - @bottles.each do |d|
        %tr
          %td= check_box_tag "drinklist_ids[]", d.id, d.active
          %td= d.name
          %td= d.brand
          %td= d.category
          %td= d.category_type
          %td= d.subtype
          %td= d.purchase_price
          %td= d.price
          %td= link_to 'Ändra', edit_drinklist_path(d)
  = submit_tag
