!!!
%html
  %head
    %meta{charset: "UTF-8"}
    %title Dryckeslista
    %link{href: 'http://fonts.googleapis.com/css?family=Gentium+Book+Basic:400,400italic,700,700italic', rel: 'stylesheet', type: 'text/css'}
    %link{href: 'style.css', rel: 'stylesheet', type: 'text/css'}
  %body
    .title
      %h1
        Datas KlubbmÃ¤steri
      %img{id: 'logo', src: asset_path('dkm_tiny.png')}
    #drinklist
      - @drinks.each do |category, list|
        .drink_category>
          %h1{:class => ["#{category}", "drink_category_title"]}
            = t(category)
          - list.group_by { |l| l.category_type }.sort_by {|e| @order.index(e.first) }.each do |type, list|
            - if type != category
              %h2{:class => "#{type}"}
                = type
            %ul.leaders
              - list.sort{ |a, b| a['price'] <=> b['price'] }.each do |drink|
                %li
                  %span= drink['name']
                  %span
                    = drink['price']
                    = ":-"
                  - if drink['subtitle']
                    .subtitle
                      = drink['subtitle']
    / .footer
    / #logo
    / %img{src: 'dkm_tiny.png'}
    / %p.dkm
    / DKM
