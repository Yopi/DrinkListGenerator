!!!
%html
  %head
    %meta{charset: "UTF-8"}
    %title Dryckeslista
    %link{href: 'http://fonts.googleapis.com/css?family=Gentium+Book+Basic:400,400italic,700,700italic', rel: 'stylesheet', type: 'text/css'}
    %link{href: 'style.css', rel: 'stylesheet', type: 'text/css'}
  %body
    #drinklist
      - drinks.group_by { |d| d['category'] }.each do |category, l|
        .drink_category>
          %h1.drink_category_title= category
          - l.group_by { |l| l['type'] }.each do |type, list|
            - if type != category
              %h2= type
            %ul.leaders
              - list.sort{ |a, b| a['name'] <=> b['name'] }.each do |drink|
                %li
                  %span= drink['name']
                  %span
                    = drink['price']
                    = ":-"
                  - if drink['subtitle']
                    .subtitle
                      = drink['subtitle']
    .footer
      #logo
        %img{src: 'skold.png'}
        %p.mottagningen
          Mottagningen
