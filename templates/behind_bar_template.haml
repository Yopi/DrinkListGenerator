!!!
%html
  %head
    %meta{charset: "UTF-8"}
    %title Bakom baren
    %link{href: 'http://fonts.googleapis.com/css?family=Gentium+Book+Basic:400,400italic,700,700italic', rel: 'stylesheet', type: 'text/css'}
    %link{href: 'style/style.css', rel: 'stylesheet', type: 'text/css'}
  %body
    %table
      %thead
        %tr
          %td Namn
          %td Glas
          %td Ingredienser
          %td Pris
      %tbody
        - drinks.group_by { |d| d['category'] }.each do |category, l|
          - l.group_by { |l| l['type'] }.each do |type, list|
            - list.sort{ |a, b| a['name'] <=> b['name'] }.each do |drink|
              %tr
                %td= drink['name']
                %td= drink['glass']
                - x = (drink['subtitle']) ? drink['subtitle'] : type
                - if x == category
                  %td= "&nbsp;"
                - else
                  %td= x
                %td
                  %strong= drink['price']
